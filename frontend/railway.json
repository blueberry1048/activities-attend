{
    "$schema": "https://railway.app/schema.json",
    "build": {
      "builder": "DOCKERFILE",
      "dockerfilePath": "Dockerfile"
    },
    "deploy": {
      "numReplicas": 1,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10,
      "healthcheckPath": "/health",
      "healthcheckTimeout": 180,
      "startCommand": "nginx -g 'daemon off;'"
    },
    "env": {
      "BACKEND_URL": {
        "description": "後端服務內部網址 (格式: http://服務名.railway.internal:端口)",
        "value": "http://disciplined-alignment.railway.internal:8080"
      }
    },
    "name": "activities-attend-frontend",
    "regions": [
      {
        "id": "tpe",
        "name": "Taiwan (Taipei)"
      }
    ]
  }
